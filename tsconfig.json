{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "lib": [
      "dom",
      "es5",
      "es6"
    ],                             
    "jsx": "react",             
    "sourceMap": true,                     
    "outDir": "./dist", 
    "importHelpers": true,     
    "strict": true,              
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noResolve": false,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules/**/*"
  ]
}